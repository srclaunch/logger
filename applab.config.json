{
  "build": [
    {
      "buildDir": "dist",
      "buildFile": "index.js",
      "buildTypes": true,
      "bundle": true,
      "codeSplitting": true,
      "excludeLibs": ["chalk"],
      "format": "esm",
      "inputScripts": ["src/index.ts"],
      "minify": true,
      "platform": "browser",
      "sourceMap": true,
      "target": "esnext",
      "treeShaking": true,
      "tsconfigPath": "tsconfig.json"
    },
    {
      "buildDir": "dist",
      "buildFile": "index.cjs.js",
      "buildTypes": true,
      "bundle": true,
      "excludeLibs": ["chalk"],
      "format": "cjs",
      "inputScripts": ["src/index.ts"],
      "minify": true,
      "platform": "browser",
      "sourceMap": true,
      "target": "es2015",
      "treeShaking": true,
      "tsconfigPath": "tsconfig.json"
    }
  ]
}
